{
  "compilerOptions": {
    "target": "es2016",
    "experimentalDecorators": true,
    "module": "commonjs",                       
    "rootDir": "./src",  
    "baseUrl": "src",
    "paths": {
      "@db/*": ["db/*"],
      "@api/*": ["api/*"],
      "@config/*": ["config/*"],
      "@utils/*": ["utils/*"]
    },
    "typeRoots": ["./node_modules/@types"],
    "allowJs": true,
    "outDir": "dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "skipLibCheck": true 
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules"]
}
